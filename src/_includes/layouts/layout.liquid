<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ title or metadata.title }}</title>
        <link rel="stylesheet" href="{{ '/css/custom.css' | url }}">
        <link rel="stylesheet" href="{{ '/css/foundation.css' | url }}">
       <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
    <body>
    <header>
     <div data-sticky-container>
        <div class="title-bar" data-sticky data-options="marginTop:0;" style="width:100%" data-top-anchor="1"
            data-btm-anchor="content:bottom">
            <div class="title-bar-left">Alert logic</div>
            <div class="title-bar-right">
                <ui class="dropdown menu align-right" data-dropdown-menu>
                    <li class="has-submenu">
                        <a href="#0"> Rakhi Mundhada</a>
                        <ul class="submenu menu vertical" data-submenu>
                            <li><a href="#0">Logout</a></li>
                        </ul>
                    </li>
                    <li role="none">
                        <a href="" role="menuitem"> Getting started</a>
                    </li>
                </ui>
            </div>
        </div>
    </div>
    <div class="custom-top-bar">
        <ul class="dropdown menu" data-dropdown-menu>
           {% if title %} <li class="menu-text">{{title}}</li>{% endif %}
        </ul>
    </div>
    </header>
    <main>
        <div class="collapse expanded row">
        <div class="grid-x grid-padding-x">
            <div class="columns large-2">
                <div class="left-nav" data-sticky>
                    <ul class="vertical menu accordion-menu" data-accordion-menu>
                        <li> <a href="">Getting Started</a>
                           <ul  class="menu vertical nested"> {%- for getStarted in collections.getStarted %}
                                <li {% if page.url == getStarted.url %} class="is-active"{% endif %} ><a href="{{getStarted.url}}">{{ getStarted.data.title }}
                                     </a>
                                 </li>
                                {%- endfor %}
                             <ul>
                        </li>
                        <li> <a href="">setup</a>
                           <ul  class="menu vertical nested"> {%- for post in collections.post %}
                                <li {% if page.url == post.url %} class="is-active"{% endif %} ><a href="{{post.url}}">{{ post.data.title }}
                                     </a>
                                </li>
                                {%- endfor %}
                             <ul>
                        </li>
                    </ul>     
                </div>
            </div>
            <div class="columns large-10">
                {{content}}
            </div>
        </div>
    </div>
    </main>

<script src="{{ '/js/vendor/jquery.js' | url}}"></script>
<script src="{{ '/js/vendor/what-input.js' | url }}"></script>
<script src="{{ '/js/vendor/foundation.js' | url }}"></script>
<script src="{{ '/js/app.js' | url }}"></script>
</body>
</html>
